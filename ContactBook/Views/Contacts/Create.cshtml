@model ContactBook.Models.Contacts

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-light">Create</h1>

<h4 class="text-light">Create a new contact:</h4>
<hr />
<div class="row bg-dark">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label text-light">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lastname" class="control-label text-light">Lastname</label>
                <input asp-for="Lastname" class="form-control" />
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>


            <div id="emailsContainer">
                <h4>Emails</h4>
                <div id="emailTemplate" style="display:none">
                    <div class="form-group">
                        <input type="email" data-index="__idx__" name="emails[__idx__]" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <button type="button" class="btn btn-success btn-sm" id="addEmail">Add Email</button>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="Phone" class="control-label text-light">PhoneNumber</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="control-label text-light">Address</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            </br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success btn-sm" />
            </div>
        </form>
    </div>
</div>
</br>
<div>
    <a asp-action="Index" class="btn btn-success btn-sm">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            let emailIndex = 0;

            $('#addEmail').click(function () {
                let emailTemplate = $('#emailTemplate').html();
                emailTemplate = emailTemplate.replace(/__idx__/g, emailIndex++);
                $('#emailsContainer').append(emailTemplate);
            });

            $('#addEmail').click();
        });
    </script>
    </script>
}
